MEMORY
{
	flash   (rx)  : ORIGIN = 0x01000000, LENGTH = 256K
	sram0   (rwx) : ORIGIN = 0x21000000, LENGTH = 32K /* this app */
	sram1   (rwx) : ORIGIN = 0x21008000, LENGTH = 32K /* malloc */
}

ENTRY(md_init)
SECTIONS
{
	. = 0x01000000;
	.start . : {
		*start.o(.text);
	} > flash

	.text : {
		*(.exception);
		*(.text*);
	} > flash

	.rodata : {
		*(.rodata*);
	} > flash

	/* Ensure _smem is associated with the next section */
	. = .;
	_smem = ABSOLUTE(.);
	.data : {
		_sdata = ABSOLUTE(.);
		*(.data*);
		_edata = ABSOLUTE(.);
	} > sram0 AT > flash

	.bss : {
		_sbss = ABSOLUTE(.);
		*(.bss*)
		*(COMMON)
		_ebss = ABSOLUTE(.);
	} > sram0

	. = ALIGN(4);
	. = . + 0x1000;
	stack_top = .;
}
